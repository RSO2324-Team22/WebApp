@using WebApp.Rehearsals
@model WebApp.Rehearsals.Models.EditRehearsalViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>

<h4>Rehearsal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="POST">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="form-group">
                <label class="form-label" asp-for="Title">Title</label>
                <input class="form-input" asp-for="Title" value="@Model.Title"/>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Location.Latitude">Location latitude</label>
                <input class="form-input" asp-for="Location.Latitude" value="@Model.Location.Latitude"/>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Location.Longitude">Location longitude</label>
                <input class="form-input" asp-for="Location.Longitude" value="@Model.Location.Longitude"/>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="StartTime">Start time</label>
                <input class="form-input" type="datetime-local" asp-for="StartTime" value="@Model.StartTime"/>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="EndTime">Expected end time</label>
                <input class="form-input" type="datetime-local" asp-for="EndTime" value="@Model.EndTime"/>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Notes">Notes</label>
                <input class="form-input" asp-for="Notes" value="@Model.Notes"/>
            </div>
            <div class="form-group">
                <label class="form-label">Status</label><br/>
                <input class="form-input" type="radio" asp-for="Status" value="@RehearsalStatus.Proposed" />
                <label>Proposed</label><br/>
                <input class="form-input" type="radio" asp-for="Status" value="@RehearsalStatus.InArrangement" />
                <label>In arrangement</label><br/>
                <input class="form-input" type="radio" asp-for="Status" value="@RehearsalStatus.AwaitingApproval" />
                <label>Avaiting approval</label><br/>
                <input class="form-input" type="radio" asp-for="Status" value="@RehearsalStatus.Confirmed" />
                <label>Confirmed</label><br/>
                <input class="form-input" type="radio" asp-for="Status" value="@RehearsalStatus.Cancelled" />
                <label>Cancelled</label><br/>
            </div>
            <div class="form-group">
                <label class="form-label">Type</label><br/>
                <input class="form-input" type="radio" asp-for="Status" value="@RehearsalType.Regular" />
                <label>Regular</label><br/>
                <input class="form-input" type="radio" asp-for="Status" value="@RehearsalType.Extra" />
                <label>Extra</label><br/>
                <input class="form-input" type="radio" asp-for="Status" value="@RehearsalType.Intensive" />
                <label>Intensive</label><br/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
        <div class="form-group">
            <a class="btn btn-danger" asp-controller="Rehearsals" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
